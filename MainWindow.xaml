<Window x:Class="Math_Dice_fixed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Dice Game" Height="550" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <!-- 목표 숫자 -->
            <TextBlock x:Name="TargetText" FontSize="20" Margin="0,0,0,10"/>
            <!-- 주사위 -->
            <TextBlock x:Name="DiceText" FontSize="18" Margin="0,0,0,10"/>

            <!-- 입력 -->
            <TextBlock Text="식 입력:" FontSize="16"/>
            <TextBox x:Name="InputBox" FontSize="16" Margin="0,5,0,2" TextChanged="InputBox_TextChanged"/>

            <!-- 실시간 검증 -->
            <TextBlock x:Name="ValidationText" FontSize="14" Margin="0,0,0,10"/>

            <!-- 버튼 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="SubmitButton" Content="제출" FontSize="16" Width="100" Margin="0,0,10,0" Click="SubmitButton_Click"/>
                <Button x:Name="RestartButton" Content="다시 시작" FontSize="16" Width="120" Click="RestartButton_Click"/>
            </StackPanel>

            <!-- 로그 -->
            <TextBlock Text="게임 로그:" FontSize="16"/>
            <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogText" FontSize="14" TextWrapping="Wrap"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
